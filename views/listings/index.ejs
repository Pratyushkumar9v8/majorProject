<% layout("/layouts/boilerplate") %>
<!-- <i class="fa-solid fa-route"></i> -->

<body>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter {
            text-align: center;
            margin-top: 2rem;
            margin-right:2rem;
            opacity: 0.7;
        }
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .filter p{
            font-size: 0.9rem;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            padding: 0.5rem;
            height: 3.2rem;
            margin-left: 2.5rem;
            display: flex;
            align-items: center;
        }
    </style>
    
    <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-heart"></i></div>
                <p>Favorites</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic City</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Swimming</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping </p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farm</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowman"></i></div>
                <p>Arctic</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>

            </div>
    </div>
    <br>
    
    <div class="bg-container mt-3">
        <% for(let listing of listings.slice().reverse()) { %>
            <div class="card style-card" style="width: 16rem;height: 18rem;">
            <a href="/listings/<%= listing.id %>" style="text-decoration: none;  color: #222222;">
            <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1585543805890-6051f7829f98?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fGJlYWNoJTIwdmFjYXRpb258ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60' %>" class="card-img-top img-fluid rounded" alt="Listing Image">

                <div class="card-body">
                        <h4><%= listing.title %> in <%= listing.location %></h4>
                       <p class="card-text" data-price="<%= listing.price %>">Price:  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night&nbsp;&nbsp;+18% GST</p>
                </div>

            </a>
            </div>
    <% } %>
    </div>

    
</body>
<script>
    let taxSwitch = document.getElementById('switchCheckDefault');
    taxSwitch.addEventListener('change', function () {
        let cards = document.querySelectorAll('.card');

        cards.forEach(card => {
            let priceTag = card.querySelector('.card-text');
            let basePrice = parseFloat(priceTag.getAttribute('data-price'));

            if (taxSwitch.checked) {
                let tax = basePrice * 0.18;
                priceTag.innerText = `Price:  ₹${(basePrice + tax).toLocaleString("en-IN")}/night`;
            } else {
                priceTag.innerText = `Price:  ₹${basePrice.toLocaleString("en-IN")}/night +18% GST`;
            }
        });
    });
</script>
